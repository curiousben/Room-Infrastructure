#!/usr/bin/env node

var logger = require('../lib/logger.js')['/opt/logger.config'];
//var Kafka = require('../lib/kafka.js')['/opt/kafka.config'];
var noble = require('../lib/ble.js')[logger];

//var producer = Kafka.addproducer(logger,'producer');
//var kafkaConfig= Kafka.config;
noble.on('discover', function(peripheral) {
    console.log('Found device with local name: ' + peripheral.advertisement.localName);
    console.log('advertising the following service uuid\'s: ' + peripheral.advertisement.serviceUuids);
	//producer.produce('topic',-1, 'Values from peripherals','BLE-SkepOne');
});
