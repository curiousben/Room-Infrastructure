pipeline {
    agent none

    environment {
      microservicePath = './microservices/Filter/modules/base/'
      version = '1.0'
    }

    stages {
        stage('Install and Test Filter') {
            agent {
                docker 'node:8.12.0-alpine'
            }
            environment {
                CI = 'true'
            }
            stages{
                stage('Install') {
                    steps {
                        dir(microservicePath) {
                            sh 'npm install --only=dev'
                        }
                    }
                }
                stage('Test') {
                    steps {
                        dir(microservicePath) {
                            sh 'npm test'
                        }
                    }
                }
            }
        }

        stage('Build Filter Microservice') {
            agent none
            steps {
                dir(microservicePath) {
                    bash './buildCoreJS.sh ${version}'
                }
            }
        }
        stage('Build Docker Image') {
            agent {
                dockerfile {
                  filename 'Dockerfile'
                  dir './microservices/Filter/modules/base/docker/1.0'
                  additionalBuildArgs '-t curiousben/filter:v2.0'
                }
            }
            steps {
                bash "echo Done"
            }
        }
    }
}
