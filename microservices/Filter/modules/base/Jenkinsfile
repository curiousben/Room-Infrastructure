pipeline {
    agent none

    stages {
        stage('Install and Test Filter') {
            agent {
                docker 'node:8.12.0-alpine'
            }
            environment {
                CI = 'true'
            }
            stages{
                stage('Install') {
                    steps {
                        bash 'npm install --only=dev'
                    }
                }
                stage('Test') {
                    steps {
                        bash 'npm test'
                    }
                }
            }
        }

        stage('Build Filter Microservice') {
            agent {
                dockerfile {
                  filename 'Dockerfile'
                  dir 'docker/1.0'
                  additionalBuildArgs '-t curiousben/filter:v2.0'
                }
            }
            steps {
                bash "echo Done"
            }
        }
    }
}
