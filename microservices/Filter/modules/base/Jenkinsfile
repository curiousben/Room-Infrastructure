pipeline {
    agent none

    environment {
      microservicePath = './microservices/Filter/modules/base/'
      version = '1.0'
    }

    stages {
        stage('Install and Test Filter') {
            agent {
                docker {
                    image 'node:8.12.0-jessie'
                    customWorkspace './microservices/Filter/modules/base/'
                }
            }
            environment {
                CI = 'true'
            }
            stages{
                stage('Install') {
                    steps {
                        sh 'npm install --only=dev'
                    }
                }
                stage("Test") {
                    steps {
                        sh 'npm test'
                    }
                }
            }
        }

        stage('Build Filter Microservice') {
            agent {
                node {
                    label 'Build path for the Microservice'
                    customWorkspace './microservices/Filter/modules/base/'
                }
            }
            steps {
                dir(microservicePath) {
                    sh './buildCoreJS.sh ${version}'
                }
            }
        }
        stage('Build Docker Image') {
            agent {
                dockerfile {
                  filename 'Dockerfile'
                  dir './microservices/Filter/modules/base/docker/1.0'
                  additionalBuildArgs '-t curiousben/filter:v2.0'
                }
            }
            steps {
                sh "echo Done"
            }
        }
    }
}
